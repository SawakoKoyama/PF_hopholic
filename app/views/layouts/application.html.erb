<!DOCTYPE html>
<html>
  <head>
    <title>Hopholic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-warning">
       <div class="container">
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "HOPHOLIC", root_path, class: 'nav-link text-light' %>
            </li>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
                </ul>
                  <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ml-auto">
                      <li class="nav-item">
                        <%= link_to "マイページ", user_path(current_user.id), class: 'fas fa-home nav-link text-light' %>
                      </li>
                      <li class="nav-item">
                        <%= link_to "ブルワリー", breweries_path, class: 'fas fa-beer nav-link text-light' %>
                      </li>
                      <li class="nav-item">
                        <%= link_to "ユーザー", users_path, class: 'fas fa-users nav-link text-light' %>
                      </li>
                      <li class="nav-item">
                        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light' %>
                      </li>
                    </ul>
                  </div>
          <% else %>
            <li class="nav-item">
              <%= link_to "HOPHOLIC", root_path, class: 'nav-link text-light' %>
            </li>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
                </ul>
                  <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ml-auto">
                      <li class="nav-item">
                         <%= link_to "HopHolicって？", about_path, class: 'fas fa-link nav-link text-light' %>
                      </li>
                      <li class="nav-item">
                         <%= link_to "新規登録", new_user_registration_path, class: 'fas fa-user-plus nav-link text-light' %>
                      </li>
                      <li class="nav-item">
                         <%= link_to "ログイン", user_session_path, class: 'fas fa-sign-in-alt nav-link text-light' %>
                      </li>
                    </ul>
                  </div>
          <% end %>
        </div>
      </div>
    </nav>
    </header>

    <%= yield %>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight HopHolic.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
