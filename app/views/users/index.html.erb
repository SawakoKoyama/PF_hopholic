<main>
    <div class="container px-5 px-sm-0">
      <div class="row">
          <div class="col-md-3">
            <h2></h2>
            <%= attachment_image_tag @user, :image, size: "60x60", fallback: "no_image.jpg"%>
              <table class="table">
                <tbody>
                  <tr></tr>
                  <tr>
                    <th>名前</th>
                    <th><%= @user.name %></th>
                  </tr>
                  <tr>
                    <th>自己紹介</th>
                    <th><%= @user.introduction %></th>
                  </tr>
                </tbody>
              </table>
              <div class="row">

                <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block", method: :get do %>
                  <i class="fas fa-user-cog"></i>
                <% end %>
              </div>
          </div>
          <div class="col-md-8 offset-md-1">
            <h2>ユーザー</h2>
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr>
                            <th></th>
                            <th>名前</th>
                            <th>自己紹介</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @users.each do |user| %>
                        <tr>
                            <td>
                              <%= link_to user_path(user.id) do %>
                              <%= attachment_image_tag user, :image, size: "60x60", fallback: "no_image.jpg"%>
                              <% end %>
                            </td>
                            <td><%= user.name %></td>
                            <td><%= user.introduction %></td>
                            <td>
                              <%# if logged_in? && current_user != user %>
                               <% if current_user.following?(user) %>
                                <%= button_to 'フォロー解除', relationship_path(current_user.relationships.find_by(follow: user)), method: :delete %>
                               <% else %>
                               <%= button_to 'フォロー', relationships_path(follow: user) %>
                               <% end %>
                              <%# end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <%= paginate @users %>
            </div>
        </div>
    </div>
</main>
