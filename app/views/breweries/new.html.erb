<h1>新規投稿</h1>
  <%= form_with model: @brewery, local:true do |f| %>
    <%= f.attachment_field :image %>
    <h4>ブルワリー名</h4>
    <%= f.text_field :brewery_name %>
    <h4>都道府県</h4>
    <%= f.text_field :prefecture_id %>
    <h4>住所</h4>
    <%= f.text_area :address %>
    <h4>コメント</h4>
    <%= f.text_area :comment %>
    <h4>評価</h4>
    <%= f.submit '投稿' %>
  <% end %>