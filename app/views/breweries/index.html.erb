  <%# if @brewery.errors.any? %>
        <%#div id="error_explanation">
          <h2>
            <%= I18n.t("errors.messages.not_saved",
                       count: @brewery.errors.count,
                       resource: @brewery.class.model_name.human.downcase)
             %>
          </h2>
          <ul>
            <%# @brewery.errors.full_messages.each do |message| %>
              <%#li><%= message %></li>
            <%# end %>
          </ul>
        </div>
        <div class="row">
            <h2>Breweries</h2>
              <% @breweries.each do |brewery| %>
              <div class="col-md-4">
                <div>
                  <%= link_to brewery_path(brewery.id) do %>
                  <%= attachment_image_tag brewery, :image, size: "200x200", fallback: "no_image.jpg"%>
                  <% end %>
                </div>
                <div><%= brewery.brewery_name %></div>
                <div><%= brewery.prefecture_id %></div>
                <div><%= @user.name %></div>
              </div>
              <% end %>
        </div>
                <%= link_to new_brewery_path, method: :get do %>
                  <i class="fas fa-plus-circle"></i>
                <% end %>

<%# end %>