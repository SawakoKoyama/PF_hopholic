<% if @brewery.favorited_by?(current_user) %>
                <p>
                  <%= link_to favorites_path(@brewery), method: :delete, remote: true do %>
                    ♥<%= @brewery.favorites.count %> いいね
                  <% end %>
                </p>
              <% else %>

                <p>
                  <%= link_to favorites_path(@brewery), method: :post, remote: true do %>
                    ♡<%= @brewery.favorites.count %> いいね
                  <% end %>
                </p>
              <% end %>